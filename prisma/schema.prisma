// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ====================
// Authentication Models (NextAuth.js)
// ====================

model Account {
  id                        String  @id @default(cuid())
  userId                    String
  type                      String
  provider                  String
  providerAccountId         String
  refresh_token             String?
  access_token              String?
  expires_at                Int?
  token_type                String?
  scope                     String?
  id_token                  String?
  session_state             String?
  refresh_token_expires_in  Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ====================
// Core Application Models
// ====================

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  emailVerified DateTime?
  name          String?
  image         String?
  tier          String         @default("free") // "free" or "pro"
  accounts      Account[]
  sessions      Session[]
  subscriptions Subscription[]
  emailScans    EmailScan[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  // Settings & Preferences
  timezone          String    @default("UTC")
  currency          String    @default("USD")
  scanningEnabled   Boolean   @default(true)
  lastScannedAt     DateTime?
  
  // Notification Preferences
  renewalAlerts     Boolean   @default(true)
  priceChangeAlerts Boolean   @default(false) // Pro feature
  marketingEmails   Boolean   @default(false)
  
  // Pro Intent
  proPlanSubscriptionIntent Boolean @default(false)
}

model Subscription {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Service Info
  serviceName     String
  serviceSlug     String?
  description     String?   // e.g. "Premium Plan", "2TB Storage"
  logoUrl         String?
  
  // Billing Info
  amount          Float
  currency        String    @default("USD")
  billingCycle    String
  nextBillingDate DateTime?
  lastBillingDate DateTime?
  
  // Detection Info
  cancellationUrl String?
  detectedFrom    String?
  confidence      Float     @default(1.0)
  
  // Status
  status          String    @default("active")
  confirmed       Boolean   @default(false)
  isTracked       Boolean   @default(false) // Only true when user confirms and under limit
  
  // Timestamps
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  cancelledAt     DateTime?
}

model CancellationGuide {
  id           String    @id @default(cuid())
  serviceName  String    @unique
  serviceSlug  String    @unique
  logoUrl      String?
  steps        String
  directLink   String?
  difficulty   String
  avgTime      String
  lastVerified DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model EmailScan {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider    String
  status      String
  emailsFound Int       @default(0)
  subsFound   Int       @default(0)
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  error       String?
}

// ====================
// Pricing Plans
// ====================

model Plan {
  id          String   @id @default(cuid())
  name        String   // "Free", "Pro"
  slug        String   @unique // "free", "pro"
  price       Float    // 0, 6.99
  currency    String   @default("USD")
  interval    String   @default("monthly") // "monthly", "yearly"
  description String?  // "Perfect to get started"
  features    Json     // ["Feature 1", "Feature 2", ...]
  isActive    Boolean  @default(true)
  isPopular   Boolean  @default(false)
  maxSubscriptions Int @default(10)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
